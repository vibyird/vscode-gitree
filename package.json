{
  "name": "gitree",
  "version": "1.0.0",
  "description": "git tree for vscode",
  "engines": {
    "vscode": "^1.103.0"
  },
  "keywords": [
    "git",
    "vscode"
  ],
  "author": "vibyird",
  "publisher": "vibyird",
  "license": "MIT",
  "type": "module",
  "main": "./extension.js",
  "l10n": "./l10n",
  "contributes": {
    "configuration": [
      {
        "id": "gitree",
        "title": "Gitree",
        "order": 1,
        "properties": {
          "gitree.statusBar.showItem": {
            "type": "boolean",
            "default": true,
            "description": "%gitree.statusBar.showItem%"
          }
        }
      }
    ],
    "commands": [
      {
        "category": "Gitree",
        "command": "gitree.view",
        "title": "%gitree.graph%"
      },
      {
        "category": "Gitree",
        "command": "gitree.graph.refresh",
        "title": "%gitree.refresh%",
        "icon": "$(refresh)"
      },
      {
        "category": "Gitree",
        "command": "gitree.settings",
        "title": "%gitree.settings%",
        "icon": "$(gear)"
      },
      {
        "category": "Gitree",
        "command": "gitree.branch",
        "title": "%gitree.branch%"
      },
      {
        "category": "Gitree",
        "command": "gitree.tag",
        "title": "%gitree.tag%"
      }
    ],
    "icons": {
      "git-logo": {
        "description": "Git Icon",
        "default": {
          "fontPath": "assets/icons/icons.woff",
          "fontCharacter": "\\E900"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "gitree.graph.refresh",
          "when": "view == gitree.graph",
          "group": "navigation@98"
        },
        {
          "command": "gitree.settings",
          "when": "view == gitree.graph",
          "group": "navigation@99"
        }
      ],
      "webview/context": [
        {
          "command": "gitree.branch",
          "when": "webviewId == gitree.graph && webviewSection == commit"
        },
        {
          "command": "gitree.tag",
          "when": "webviewId == gitree.graph && webviewSection == commit"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "gitree",
          "title": "Gitree",
          "icon": "$(git-logo)"
        }
      ]
    },
    "views": {
      "gitree": [
        {
          "type": "webview",
          "id": "gitree.graph",
          "name": "%gitree.graph%",
          "icon": "$(git-logo)"
        }
      ]
    }
  },
  "activationEvents": [
    "onWebviewPanel:gitree.settings",
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "lint": "eslint --ext .js,.ts,.svelte src"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "svelte": "^4.2.20"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-swc": "^0.4.0",
    "@swc/core": "^1.13.5",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.103.0",
    "@types/vscode-webview": "^1.57.5",
    "eslint": "^9.34.0",
    "eslint-plugin-svelte": "^3.12.1",
    "neostandard": "^0.12.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "rollup": "^4.50.2",
    "rollup-plugin-scss": "^4.0.1",
    "rollup-plugin-svelte": "^7.2.3",
    "sass": "^1.91.0",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
